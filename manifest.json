/* File: manifest.json
 * -------------------
 * A manifest file (like this one) is used to
 * give Chrome information about your extension.
 *
 * You shouldn't need to change anything in this file
 * unless you're doing extensions.
 *
 * For more details, check out the documentation:
 * https://developer.chrome.com/extensions/manifest
 */

{
  // Required
  "manifest_version": 2,
  "name": "Mattify",
  "version": "0.0.1",

  // Recommended
  "description": "Chrome Extension Hackpack @ TreeHacks 2019",
  "icons": {
    "16": "icons/TreeHacks-white-16.png",
    "32": "icons/TreeHacks-white-32.png",
    "48": "icons/TreeHacks-white-48.png",
    "64": "icons/TreeHacks-white-64.png",
    "96": "icons/TreeHacks-white-96.png",
    "128": "icons/TreeHacks-white-128.png"
  },

  // Optional
  "homepage_url": "https://www.mattleon.com",

  // Put any additional permissions your applications needs here.
  // For a list of possibilities, see
  // https://developer.chrome.com/extensions/declare_permissions
  "permissions": [
    "activeTab",
    "storage"
  ],
  // Probably will not need to be modified unless you *really*
  // know what you're doing
  "browser_action": {
    "default_icon": "icons/TreeHacks-white-19.png",
    "default_title": "Mattify",
    "default_popup": "src/popup.html"
  },
  // No need for this because we are manually loading in content.js with each button click
  // but might be useful when you want it to be automatically loaded in
  // "content_scripts": [
  //   {
  //     "matches": [
  //       "http://*/*", "https://*/*"
  //     ],
  //     "js": [
  //       "/src/content.js"
  //     ],
  //     "run_at": "document_end"
  //   }
  // ],
  "web_accessible_resources": ["src/image.jpg"]
}
